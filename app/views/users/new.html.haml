.page.login-page
  .container.d-flex.align-items-center
    .form-holder.has-shadow
      .row
        .col-lg-6
          .info.d-flex.align-items-center
            .content
              .logo
                %h1
                  Upinus Partner
              %p
                The partner page of Upinus system.
        .col-lg-6.bg-white
          .form.d-flex.align-items-center
            .content
              .error-explanation.text-danger
                - if @user.errors.any?
                  This form has
                  = pluralize(@user.errors.size, "error")
                  %ul
                    - @user.errors.full_messages.each do |msg|
                      %li= msg
              = form_for(:user, url: users_path, class: "login-form") do |f|
                .form-group
                  = f.email_field :email, class: "input-material", placeholder: "Email"
                .form-group
                  = f.password_field :password, class: "input-material", placeholder: "Password"
                .form-group
                  = f.password_field :password_confirmation, class: "input-material", placeholder: "Password Confirmation"
                .form-group
                  = f.text_field :phone, class: "input-material", placeholder: "Phone number"
                = f.submit "Sing up", class: "btn btn-primary"
              %small Already have an account?
              %a.signup{ href: login_path } Login
